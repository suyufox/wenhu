# EditorConfig 核心配置
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,ts}]
indent_size = 2

[*.vue]
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 120

[*.rs]
indent_size = 4
max_line_length = 100

[*.{html,css,scss,sass}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.sh]
indent_size = 2

[*.{toml,ini}]
indent_size = 2
